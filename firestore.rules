rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Contracts collection
    match /contracts/{contractId} {
      // Users can read their own contracts
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users cannot directly create contracts (only via API)
      allow create: if false;

      // Users cannot update or delete contracts
      allow update, delete: if false;
    }

    // Analysis jobs collection
    match /analysisJobs/{jobId} {
      // Users can read their own job status
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users cannot directly create, update, or delete jobs
      allow create, update, delete: if false;
    }

    // Findings collection
    match /findings/{findingId} {
      // Users can read findings for their contracts (checked via contractId)
      allow read: if isAuthenticated() &&
                     exists(/databases/$(database)/documents/contracts/$(resource.data.contractId)) &&
                     get(/databases/$(database)/documents/contracts/$(resource.data.contractId)).data.userId == request.auth.uid;

      // Users cannot directly create, update, or delete findings
      allow create, update, delete: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
